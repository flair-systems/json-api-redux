{
  "extends": ["tslint:recommended", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts"
    ]
  },
  "rulesDirectory": ["node_modules/tslint-microsoft-contrib"],
  "rules": {
    "trailing-comma": {
      "options": {
        "multiline": "always",
        "singleline": "never",
        "esSpecCompliant": true
      },
      "severity": "error"
    },
    "no-console": {
      "severity": "error"
    },
    "prefer-const": {
      "severity": "error"
    },
    "jsx-no-lambda": {
      "severity": "off"
    }
  }
}
